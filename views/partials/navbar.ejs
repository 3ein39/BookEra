<!DOCTYPE html>

<html lang="en">

<head>
    <title></title>
    <meta charset="utf-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/stylesheets/nav.css" rel="stylesheet" type="text/css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" type="text/css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="..." defer></script>

</head>
<body>
    <nav>
        <h1>BOOK<span style="color: #5379fa">ERA</span></h1>

        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/books">Books</a></li>
            <li><a href="/about">About Us</a></li>
            <% if (!user) { %>
                <li><a href="/users/login">Login</a></li>
                <li><a href="/users/signup">Signup</a></li>
            <% }  %>
        </ul>
        <% if (user) { %>
            <% if(user.gender === 'male'){ %>
                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" class="user-pic" onclick="toggleMenu()">
            <% } else { %>
                <img src="https://bootdey.com/img/Content/avatar/avatar3.png" class="user-pic">
            <% } %>
            <div class="sub-menu-wrap" id="submenu">
                <div class="sub-menu">
                    <div class="user-info">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png">
                        <h3><%= user.username %></h3>
                    </div>
                    <hr>
                    <a href="/users/<%= user._id %>" class="sub-menu-link">
                        <img src="/images/profile.png">
                        <p>Edit Profile</p>
                        <span>></span>
                    </a>
                    <%if (user && user.type === 'seller') {%>
                        <a href="/books/create" class="sub-menu-link">
                            <img src="/images/book2.png">
                            <p>Add Book</p>
                            <span>></span>
                        </a>
                    <% } else {%>
                        <a href="#" id="cart-icon" class="sub-menu-link">
                            <img src="/images/cart.png">
                            <p>My Cart</p>
                            <span>></span>
                        </a>
                    <% } %>
                    <a href="/orders/mybooks" class="sub-menu-link">
                        <img src="/images/book.png">
                        <p>My Books</p>
                        <span>></span>
                    </a>
                    <a href="/users/logout" class="sub-menu-link">
                        <img src="/images/logout.png">
                        <p>Logout</p>
                        <span>></span>
                    </a>
                </div>
            </div>
        <% } %>
    </nav>
<script>
    let submenu=document.getElementById("submenu");
        function toggleMenu() {
            submenu.classList.toggle("show");

        }
</script>
</body>

</html>